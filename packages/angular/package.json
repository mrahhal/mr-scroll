{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "name": "@mr-scroll/angular",
  "description": "The best custom scroll for the web. This is the angular wrapper.",
  "version": "0.1.0",
  "scripts": {
    "compile": "ngc",
    "build": "ng-packagr -p package.json && npm run bundle-scss",
    "lint": "npx eslint \"src/**/*.ts\"",
    "check-peer-dependencies": "check-peer-dependencies",
    "bundle-scss": "npx sass src/scroll.scss dist/styles.css",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "custom",
    "scroll",
    "scrollbar",
    "angular",
    "component"
  ],
  "author": "Mohammad Rahhal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrahhal/mr-scroll"
  },
  "bugs": {
    "url": "https://github.com/mrahhal/mr-scroll/issues"
  },
  "files": [
    "dist",
    "src/scss"
  ],
  "engines": {
    "node": ">=6.0.0"
  },
  "distDir": "dist",
  "peerDependencies": {
    "@angular/common": ">=11.0.0",
    "@angular/core": ">=11.0.0",
    "@mr-scroll/core": "^0.1.0",
    "rxjs": ">=6.0.0"
  },
  "devDependencies": {
    "@angular/animations": "^11.0.0",
    "@angular/compiler": "^11.0.0",
    "@angular/compiler-cli": "^11.0.0",
    "@angular/platform-browser": "^11.0.0",
    "@angular/platform-browser-dynamic": "^11.0.0",
    "@mr-scroll/core": "file:../core",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "check-peer-dependencies": "^4.0.0",
    "eslint": "^7.25.0",
    "ng-packagr": "^11.0.0",
    "sass": "^1.32.12",
    "ts-node": "9.1.1",
    "tslib": "^2.2.0",
    "typescript": "~4.1.5",
    "zone.js": "0.10.3"
  },
  "ngPackage": {
    "lib": {
      "entryFile": "src/index.ts",
      "umdModuleIds": {
        "@mr-scroll/core": "mr-scroll-core"
      }
    }
  }
}
