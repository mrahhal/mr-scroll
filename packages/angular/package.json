{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "name": "@mr-scroll/angular",
  "description": "The best custom scroll for the web. This is the angular wrapper.",
  "version": "0.1.5",
  "scripts": {
    "compile": "ngc",
    "build": "ng-packagr -p package.json",
    "lint": "npx eslint \"src/**/*.ts\"",
    "check-peer-dependencies": "npx check-peer-dependencies",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "custom",
    "scroll",
    "scrollbar",
    "angular",
    "component"
  ],
  "author": "Mohammad Rahhal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrahhal/mr-scroll"
  },
  "bugs": {
    "url": "https://github.com/mrahhal/mr-scroll/issues"
  },
  "files": [
    "**"
  ],
  "engines": {
    "node": ">=6.0.0"
  },
  "distDir": "dist",
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "peerDependencies": {
    "@angular/common": ">=10.0.0",
    "@angular/core": ">=10.0.0",
    "@mr-scroll/core": "^0.1.0",
    "rxjs": ">=6.0.0"
  },
  "devDependencies": {
    "@angular/animations": "^10.0.0",
    "@angular/compiler": "^10.0.0",
    "@angular/compiler-cli": "^10.0.0",
    "@angular/platform-browser": "^10.0.0",
    "@angular/platform-browser-dynamic": "^10.0.0",
    "@mr-scroll/core": "file:../core",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "eslint": "^7.25.0",
    "ng-packagr": "^10.0.0",
    "ts-node": "9.1.1",
    "tslib": "^2.2.0",
    "typescript": "~4.0.0",
    "zone.js": "~0.10.0"
  },
  "ngPackage": {
    "lib": {
      "entryFile": "src/index.ts",
      "umdModuleIds": {
        "@mr-scroll/core": "mrScrollCore"
      }
    }
  }
}
